<Window x:Class="RadioButtons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtons"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label FontWeight="Bold" FontSize="20">Magst du mich?</Label>
        <RadioButton Margin="5" Checked="JaButtonChecked">
            <WrapPanel>
                <Rectangle Fill="Green" Width="15" Height="15"/>
                <TextBlock Text="Ja" Foreground="Green" Margin="5,0,0,0"/>
            </WrapPanel>
        </RadioButton>
        <RadioButton Margin="5" Checked="NeinButtonChecked" IsChecked="True">
            <WrapPanel>
                <Rectangle Fill="Red" Width="15" Height="15"/>
                <TextBlock Text="Nein" Foreground="Red" Margin="5,0,0,0"/>
            </WrapPanel>
        </RadioButton>
        <RadioButton Margin="5" Checked="VielleichtButtonChecked">
            <WrapPanel>
                <Rectangle Fill="Purple" Width="15" Height="15"/>
                <TextBlock Text="Vielleicht" Foreground="Purple" Margin="5,0,0,0"/>
            </WrapPanel>
        </RadioButton>
    </StackPanel>
</Window>
