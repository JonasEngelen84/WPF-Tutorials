<Window x:Class="INotifyPropertyChanged_OneWay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INotifyPropertyChanged_OneWay"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="Vorname"
           HorizontalAlignment="Center"/>
        <TextBox Width="100"
             Height="20"
             Text="{Binding Path=Vorname, Mode=TwoWay}"/>

        <Label Content="Nachname"
           HorizontalAlignment="Center"/>
        <TextBox Width="100"
             Height="20"
             Text="{Binding Path=Nachname, Mode=TwoWay}"/>

        <Label Content="Name"
           HorizontalAlignment="Center"/>
        <TextBox Width="200"
             Height="20"
             Text="{Binding Path=Name, Mode=TwoWay}"/>

    </StackPanel>
</Window>
